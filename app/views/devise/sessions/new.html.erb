<div class="flex flex-col w-80">
<h2 class="text-3xl mb-5">Fazer Login</h2>
 <div class="flex gap-5 mb-10">
      <%= link_to 'dono de restaurante', new_admin_session_path, class: "user-link #{"active" if resource_name == :admin}"%>
      <%= link_to 'funcionÃ¡rio', new_employee_session_path, class: "user-link #{"active" if resource_name == :employee}"%>
  </div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field mb-4">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input-primary'%>
  </div>

  <div class="field mb-4">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: 'input-primary'%>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field mb-4">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions mb-5">
    <%= f.submit "Entrar", class:'btn-submit'%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>