<section class="p-10 mb-20 border-2 border-default-200 rounded-md">
    <h2 class="text-2xl">Pratos</h2>
    <div class="min-h-[2px] bg-gray-200 my-5"></div>
    
    <% @dishes.each do |dish|%>
        <div class="flex gap-5 p-5 items-center">
            <%= link_to dish_path(dish.id) do%>
                <div class="flex gap-5">
                    <% if dish.photo.present? %>
                        <%= image_tag dish.photo,width: 60, height: 60,  class: ''%>
                    <% end %>
                    <div>
                        <h3 class="font-medium"><%= dish.name %></h3>
                        <p class="text-sm"><%= dish.description %></p>
                    </div>
                </div>
            <% end %>
        
            <%= link_to 'Editar', edit_dish_path(dish.id)%>
            <%= link_to 'Deletar', dish_path(dish.id), data: {turbo_method: :delete, turbo_confirm: "Tem certeza que deseja excluir #{dish.name}?"}%>

        </div>
    <% end %>
    <%= link_to 'Adicionar Prato', new_dish_path, class: 'rounded-xl text-white font-medium bg-amber-500 px-4 py-2'%>
</section>

