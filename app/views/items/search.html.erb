<h1 class="text-2xl mb-3">Resultados da pesquisa</h1>

<div class="flex flex-col gap-3">
<% if @items.empty? %>
    <p>Nenhum item com nome ou descrição com '<%=@query%>' encontrado</p>
<% end %>
<% @items.each do |item| %>
    <%= link_to item_path(item.id) do%>
        <%= render 'card', item: item%>
    <% end %>
<% end %>

</div>