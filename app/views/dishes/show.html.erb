<h1><%= @dish.name %></h1>
<%= link_to 'Editar', edit_dish_path(@dish.id)%>
<%= link_to 'Remover', dish_path(@dish.id), method: :delete%>
<p>Status: <%= @dish.is_active ? "Ativo" : "Desativado" %></p> 
<%= button_to @dish.is_active ? "Desativar" : "Ativar", change_status_iten_path(@dish.id), method: :patch%>
<% if @dish.photo.present?%>
    <%= image_tag @dish.photo%>
<%end%>
<p><%= @dish.description %></p>
<%if @dish.calories.present?%>
    <p>calorias <%= @dish.calories %></p>
<% end %>

<section id="portion">
    <% @dish.portions.each do |portion|%>
        <div class="flex w-1/2 justify-between py-2">
            <p><%= portion.description %></p>
            <p><%= portion.show_price%></p>
            <%= link_to 'Editar', edit_portion_path(portion.id)%>
        </div>
        <div>
            <p>Histórico de preços</p>
            <% portion.portion_prices.order(created_at: :desc).each do |price|%>
                <div class="flex gap-5">
                    <p><%= price.show_price %></p>
                    <p><%= price.created_at.strftime("%d/%m/%y") %></p>
                </div>
            <% end %>
        </div>
    <% end %>
</section>