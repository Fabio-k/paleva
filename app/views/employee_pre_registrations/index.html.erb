<h2 class="text-2xl">Cadastrar funcionário</h2>
<%= form_with model: @employee_pre_registration, html: {class: 'flex gap-10'} do |f|%>
    <div class="field" >
        <%= f.text_field :email, placeholder: 'E-mail', class: "input-secondary w-64"%>
    </div>
    <div class="field">
        <%= f.text_field :cpf, placeholder: 'CPF', class: "input-secondary w-64"%>
    </div>
    <%= f.submit 'Cadastrar', class: 'btn-submit w-64 mb-4'%>
<% end %>

<h1 class="text-xl">funcionários</h1>

<table class="border-separate border-spacing-4 table-auto">
    <thead>
        <tr>
            <th>CPF</th>
            <th>E-mail</th>
            <th>Status do cadastro</th>
        </tr>
    </thead>
    <tbody>
        <% @employee_pre_registrations.each do |emp_pre_r|%>
            <tr>
                <td>
                    <p><%= emp_pre_r.cpf%></p>
                </td>
                <td>
                    <p><%= emp_pre_r.email%></p>
                </td>
                <td>
                    <p><%= emp_pre_r.is_used ? 'Usado' : 'Não usado'%></p>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>


